<body class="min-h-screen flex flex-col">
  <!-- コンテンツエリア -->
  <div class="flex-grow">
    <div class="container mx-auto px-4 py-8">
      <div class="flex flex-col md:flex-row gap-8">
        <div class="md:w-1/4">
          <div class="card bg-base-100 shadow-xl">
            <div class="card-body">
              <h2 class="card-title">人気のタグ</h2>
              <div class="flex flex-wrap gap-2">
                <span class="badge transition duration-200 hover:bg-gray-300">#まだ</span>
                <span class="badge transition duration-200 hover:bg-gray-300">#実装</span>
                <span class="badge transition duration-200 hover:bg-gray-300">#できていません</span>
                <span class="badge transition duration-200 hover:bg-gray-300">#チョコレート</span>
                <span class="badge transition duration-200 hover:bg-gray-300">#お土産</span>
                <span class="badge transition duration-200 hover:bg-gray-300">#手土産</span>
                <span class="badge transition duration-200 hover:bg-gray-300">#クッキー</span>
                <span class="badge transition duration-200 hover:bg-gray-300">#煎餅</span>
              </div>
            </div>
          </div>
        </div>

        <div class="md:w-3/4">
          <form class="mb-8">
            <div class="flex flex-col md:flex-row gap-4">
              <div class="form-control flex-grow">
                <div class="input-group flex-nowrap w-full">
                  <input type="text" placeholder="検索..." class="input input-bordered flex-grow w-4/5" />
                  <button class="btn btn-square">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                    </svg>
                  </button>
                </div>
              </div>
            </div>

            <div class="mt-4">
              <span class="text-lg font-semibold">絞り込み検索</span>
            </div>

            <div class="mt-2 flex flex-col md:flex-row gap-4">
              <div class="form-control flex-grow">
                <select class="select select-bordered w-1/4">
                  <option disabled selected>都道府県</option>
                  <% prefectures_and_countries.each do |location| %>
                    <option><%= location[:name] %></option>
                  <% end %>
                </select>
              </div>
            </div>
          </form>

          <!-- 投稿画像を2列に変更 -->
          <div class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-3 gap-4">
            <% if @posts.present? %>
              <% @posts.each do |post| %>
                <div class="relative overflow-hidden group"> <!-- group クラスを追加 -->
                  <a href="<%= post_path(post) %>" class="block">
                    <% if post.images.present? %>
                      <!-- 画像にホバー効果を追加 -->
                      <img class="object-cover w-full h-full rounded transition duration-200 group-hover:scale-110" style="aspect-ratio: 1;" alt="投稿画像" src="<%= post.images.first.url %>">
                    <% else %>
                      <!-- ダミー画像にもホバー効果を追加 -->
                      <img class="object-cover object-center rounded w-full h-full transition duration-200 group-hover:scale-110" alt="投稿画像" src="https://dummyimage.com/720x600">
                    <% end %>
                  </a>
                </div>
              <% end %>
            <% else %>
              <p class="text-center text-gray-500">現在、投稿はありません。</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
