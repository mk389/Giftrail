<div class="hero bg-base-200 min-h-screen flex items-center justify-center">
  <div class="text-center mb-4 w-full max-w-sm">
    <<h1 className="text-[min(13vw,130px)]">新規登録</h1>
  </div>
  <div class="card bg-base-100 w-full max-w-sm shrink-0 shadow-2xl">
    <form class="card-body">
      <div class="form-control">
        <label class="label">
          <span class="label-text">ユーザー名</span>
        </label>
        <div class="flex items-center">
          <span class="icon mr-2"><i class="fas fa-user"></i></span>
          <input type="text" placeholder="ユーザー名" class="input input-bordered w-full" required />
        </div>
      </div>
      <div class="form-control">
        <label class="label">
          <span class="label-text">メールアドレス</span>
        </label>
        <div class="flex items-center">
          <span class="icon mr-2"><i class="fas fa-envelope"></i></span>
          <input type="email" placeholder="メールアドレス" class="input input-bordered w-full" required />
        </div>
      </div>
      <div class="form-control">
        <label class="label">
          <span class="label-text">パスワード</span>
        </label>
        <div class="flex items-center">
          <span class="icon mr-2"><i class="fas fa-lock"></i></span>
          <input type="password" placeholder="パスワード" class="input input-bordered w-full" required />
        </div>
      </div>
      <div class="form-control">
        <label class="label">
          <span class="label-text">パスワード確認</span>
        </label>
        <div class="flex items-center">
          <span class="icon mr-2"><i class="fas fa-lock"></i></span>
          <input type="password" placeholder="パスワード確認" class="input input-bordered w-full" required />
        </div>
      </div>
      <div class="form-control mb-3">
        <label class="label">
          <span class="label-text">プロフィール画像</span>
        </label>
        <div class="flex items-center">
          <span class="icon mr-4"><i class="fas fa-image"></i></span>
          <input type="file" name="board_image" id="board_image" class="hidden" accept="image/*" required />
          <button type="button" class="btn btn-outline max-w-xs flex items-center" style="height: 40px;" onclick="document.getElementById('board_image').click();">
            <i class="mr-2"></i> Choose File
          </button>
        </div>
      </div>
      <div class="form-control mt-6">
        <button class="btn btn-primary">アカウント登録</button>
      </div>
    </form>
  </div>
</div>
