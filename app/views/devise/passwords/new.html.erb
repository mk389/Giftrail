<div class="hero bg-base-200 min-h-screen flex items-center justify-center">
  <div class="card bg-base-100 max-w-xl w-full shrink-0 shadow-2xl px-8">
    <div class="text-center mb-4" style="margin-top: 40px;">
      <h2 class="text-4xl font-bold py-6">パスワードリセット</h2>
    </div>
    
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: 'card-body', method: :post }) do |f| %>
      <% if resource.errors.any? %>
        <div id="error_explanation" class="alert alert-error mb-4">
          <ul>
            <% resource.errors.full_messages.uniq.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- メールアドレス -->
      <div class="form-control mb-4">
        <label class="label w-full" for="email">
          <span class="label-text">メールアドレス</span>
        </label>
        <div class="flex items-center w-full">
          <i class="fas fa-envelope mr-4"></i>
          <%= f.email_field :email, placeholder: "メールアドレス", class: "input input-bordered w-full", required: true, autofocus: true, autocomplete: "email" %>
        </div>
      </div>

      <!-- パスワードリセット送信ボタン -->
      <div class="form-control mt-6">
        <%= f.submit "送信", class: "btn btn-primary w-full" %>
      </div>
    <% end %>
  </div>
</div>

